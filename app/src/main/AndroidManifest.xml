<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.videosc2"
	>
	<!-- necessary permissions-->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.CAMERA"/>
	<!-- <uses-permission android:name="android.permission.WRITE_SETTINGS" /> -->

	<uses-feature android:name="android.hardware.camera"/>
	<uses-feature android:name="android.hardware.camera.autofocus"/>

	<application
		android:allowBackup="true"
		android:name="net.videosc2.VideOSCApplication"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:theme="@style/AppTheme">
		<activity
			android:name=".activities.VideOSCMainActivity"
			android:screenOrientation="landscape"
			android:configChanges="orientation|keyboardHidden"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>

				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>

				<data
					android:scheme="http"
					android:host="videosc.net"
					android:path="/"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.RefreshScreen"/>
		<activity
			android:name=".utilities.VideOSCUIHelpers"/>
	</application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/multislider_labels"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:baselineAligned="false">

	<LinearLayout
		android:orientation="vertical"
		android:id="@+id/values_layout"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="0.5">

		<TextView
			android:id="@+id/values_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="5dp"
			android:paddingStart="5dp"
			android:paddingRight="5dp"
			android:paddingEnd="5dp"
			android:text="@string/values"
			android:textSize="13sp"
			android:background="@color/colorDarkTransparentBackground"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:id="@+id/mix_layout"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="0.5">

		<TextView
			android:id="@+id/mix_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="5dp"
			android:paddingStart="5dp"
			android:paddingRight="5dp"
			android:paddingEnd="5dp"
			android:textSize="13sp"
			android:text="@string/mix"
			android:background="@color/colorDarkTransparentBackground"/>

	</LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fps_calc_period_indicator"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:animateLayoutChanges="true"
              android:background="@color/colorDarkTransparentBackground"
              android:layout_margin="8dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              android:paddingEnd="4dp"
              android:paddingStart="4dp"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:layout_gravity="bottom|start"
              android:orientation="horizontal">

	<TextView
		android:id="@+id/fps_pre"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#ffffff"
	    android:layout_marginEnd="3dp"
	    android:layout_marginRight="3dp"
	    android:text="@string/frame_rate_pre"
	    android:textSize="13sp"
		/>

	<TextView
		android:id="@+id/fps"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ffffff"
	    android:text="0.0"
		android:textSize="13sp"
		/>

	<TextView
		android:id="@+id/calc_period_pre"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ffffff"
		android:layout_marginRight="3dp"
		android:layout_marginEnd="3dp"
	    android:text="@string/calc_period_pre"
		android:textSize="13sp"
		/>

	<TextView
		android:id="@+id/calc_period"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ffffff"
	    android:text="1"
		android:textSize="13sp"
		/>
</LinearLayout>